<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".mainTemplate" template="/WEB-INF/jsp/template.jsp">
        <put-attribute name="title" value="Page" type="string" />
        <put-attribute name="header" value="/WEB-INF/jsp/template/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/template/footer.jsp" />
        
    </definition>
 
    <definition name="home" extends=".mainTemplate">
    	<put-attribute name="left_content" value="/WEB-INF/jsp/home/left_content_home.jsp"/>
        <put-attribute name="content" value="/WEB-INF/jsp/home/content-home.jsp" />
    </definition>
    <definition name="admin" extends=".mainTemplate">
    	<put-attribute name="left_content" value="/WEB-INF/jsp/admin/left_content_admin.jsp"/>
        <put-attribute name="content" value="/WEB-INF/jsp/admin/content_admin.jsp" />
    </definition>
    <definition name="product" extends=".mainTemplate">
    	<put-attribute name="left_content" value="/WEB-INF/jsp/home/left_content_home.jsp"/>
        <put-attribute name="content" value="/WEB-INF/jsp/product-detail.jsp" />
    </definition>

    
</tiles-definitions>
                