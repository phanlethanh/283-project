<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">123456</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/onlinestore</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping class="com.onlinestore.model.Status" />
        <mapping class="com.onlinestore.model.Category" />
        <mapping class="com.onlinestore.model.TransportFee" />
        <mapping class="com.onlinestore.model.CategoryProduct" />
        <mapping class="com.onlinestore.model.Config" />
        <mapping class="com.onlinestore.model.Promotion" />
        <mapping class="com.onlinestore.model.OsOrderDetail" />
        <mapping class="com.onlinestore.model.Producer" />
        <mapping class="com.onlinestore.model.Product" />
        <mapping class="com.onlinestore.model.Price" />
        <mapping class="com.onlinestore.model.Tax" />
        <mapping class="com.onlinestore.model.OsUser" />
        <mapping class="com.onlinestore.model.OsOrder" />
        <mapping class="com.onlinestore.model.UserGroup" />
    </session-factory>
</hibernate-configuration>
